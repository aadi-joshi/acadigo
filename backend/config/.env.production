# Production environment settings
NODE_ENV=production
PORT=5000

# MongoDB
MONGODB_URI=mongodb+srv://your-mongodb-atlas-uri

# JWT
JWT_SECRET=your-secure-jwt-secret
JWT_EXPIRE=7d

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_BUCKET_NAME=acadigo

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_STUDENT=100
RATE_LIMIT_MAX_TRAINER=150
RATE_LIMIT_MAX_ADMIN=200
RATE_LIMIT_MAX_AUTH=30

# Email Service
EMAIL_FROM=noreply@acadigo.com
